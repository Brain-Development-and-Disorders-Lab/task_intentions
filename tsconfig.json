{
  "include": ["src", "test", "types"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@lib/*": ["lib/*"],
      "@classes/*": ["lib/classes/*"],
      "@components/*": ["lib/view/components/*"],
      "@screens/*": ["lib/view/screens/*"],
    },
    "rootDirs": ["src", "test"],
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  }
}